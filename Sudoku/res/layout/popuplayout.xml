<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/popup"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:shrinkColumns="*"  
   android:stretchColumns="*"
   android:background="#808080"
   android:orientation="vertical" >
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip" >
        
        <Button
	   android:id="@+id/b1"
	   android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   android:text="1"
	   android:onClick="popUpButtonHandle" />
	
	<Button
	   android:id="@+id/b2"
	   android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   android:text="2" 
	   android:onClick="popUpButtonHandle" />
	
	<Button
	   android:id="@+id/b3"
	   android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   android:text="3" 
	   android:onClick="popUpButtonHandle" />
        
    </TableRow>
    
   	<TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip" >
	   	    
		<Button
		   android:id="@+id/b4"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:text="4" 
		   android:onClick="popUpButtonHandle" />
		
		<Button
		   android:id="@+id/b5"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:text="5" 
		   android:onClick="popUpButtonHandle" />
		
		<Button
		   android:id="@+id/b6"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:text="6" 
		   android:onClick="popUpButtonHandle" />
   	    
	</TableRow>
	
   	<TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip" >
		
	   	<Button
		   android:id="@+id/b7"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:text="7" 
		   android:onClick="popUpButtonHandle" />
		
		<Button
		   android:id="@+id/b8"
		   android:layout_width="fill_parent" 	
		   android:layout_height="fill_parent"
		   android:text="8" 
		   android:onClick="popUpButtonHandle" />
		
		<Button
		   android:id="@+id/b9"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:text="9" 
		   android:onClick="popUpButtonHandle" />
   	    
    </TableRow>
    
   	<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip"
        android:gravity="center_horizontal" >
   	       	
	    <Button
		   android:id="@+id/b0"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:text="0" 
		   android:onClick="popUpButtonHandle" />
   	    
    </TableRow>

</TableLayout>
